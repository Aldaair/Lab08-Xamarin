             xmlns:local="clr-namespace:Lab08"
             x:Class="Lab08.Ejemplo">
    <ContentPage.Resources>
        <StyleSheet Source="estilos.css" />
    </ContentPage.Resources>
    <StackLayout>
        <Label Text="Aldair Huamani"
